<layouts>
    <layout id="MainLayout">
		<drawable class="Background"/>
		<drawable class="CatcherCar"/>
		<drawable class="Runner"/>
		<label id="remainingTimeLabel"
				x="dc.getWidth()*1/4"
				y="dc.getHeight()/2 - dc.getFontHeight(Gfx.FONT_LARGE)/2 - dc.getFontHeight(Gfx.FONT_XTINY)/2"
				text="@Strings.remainingTimeString"
				color="Gfx.COLOR_LT_GRAY"
				font="Gfx.FONT_XTINY"
				justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER" />
		<drawable class="RemainingTime"/>
		<label id="finishLabel"
				x="dc.getWidth()*3/4"
				y="dc.getHeight()/2 - dc.getFontHeight(Gfx.FONT_LARGE)/2 - dc.getFontHeight(Gfx.FONT_XTINY)/2"
				text="@Strings.finishString"
				color="Gfx.COLOR_LT_GRAY"
				font="Gfx.FONT_XTINY"
				justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER" />
		<drawable class="Finish"/>
	</layout>
	
	<layout id="RoundLayout">
		<drawable class="Background"/>
		<drawable class="Runner"/>
		<drawable class="CatcherCar"/>
		<label id="remainingTimeLabel"
				x="dc.getWidth()*1/4"
				y="dc.getHeight()/2 - dc.getFontHeight(Gfx.FONT_LARGE)/2 - dc.getFontHeight(Gfx.FONT_XTINY)/2"
				text="@Strings.remainingTimeString"
				color="Gfx.COLOR_LT_GRAY"
				font="Gfx.FONT_XTINY"
				justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER" />
		<drawable class="RemainingTime"/>
		<label id="finishLabel"
				x="dc.getWidth()*3/4"
				y="dc.getHeight()/2 - dc.getFontHeight(Gfx.FONT_LARGE)/2 - dc.getFontHeight(Gfx.FONT_XTINY)/2"
				text="@Strings.finishString"
				color="Gfx.COLOR_LT_GRAY"
				font="Gfx.FONT_XTINY"
				justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER" />
		<drawable class="Finish"/>
	</layout>
	<layout id="TopLayout">
		<drawable class="Background"/>
		<drawable class="CatcherCar"/>
		<drawable class="Runner"/>
		<label id="remainingTimeLabel"
				x="dc.getWidth()/2 + dc.getWidth()/25"
				y="dc.getHeight() - dc.getFontHeight(Gfx.FONT_LARGE) - dc.getFontHeight(Gfx.FONT_XTINY)/2"
				font="Gfx.FONT_XTINY"
				color="Gfx.COLOR_LT_GRAY"
				text="@Strings.remainingTimeString"
				justification="Gfx.TEXT_JUSTIFY_RIGHT | Gfx.TEXT_JUSTIFY_VCENTER" />
		<drawable class="RemainingTime"/>
		<label id="finishLabel"
				x="dc.getWidth()/2 + dc.getWidth()*2/25"
				y="dc.getHeight() - dc.getFontHeight(Gfx.FONT_LARGE) - dc.getFontHeight(Gfx.FONT_XTINY)/2"
				font="Gfx.FONT_XTINY"
				color="Gfx.COLOR_LT_GRAY"
				text="@Strings.finishString"
				justification="Gfx.TEXT_JUSTIFY_LEFT | Gfx.TEXT_JUSTIFY_VCENTER" />
		<drawable class="Finish"/>
	</layout>
	<layout id="BottomLayout">
		<drawable class="Background"/>
		<drawable class="Runner"/>
		<drawable class="CatcherCar"/>
		<label id="remainingTimeLabel"
				x="dc.getWidth()/2 + dc.getWidth()/25"
				y="dc.getFontHeight(Gfx.FONT_LARGE) + dc.getFontHeight(Gfx.FONT_XTINY)/2"
				font="Gfx.FONT_XTINY"
				color="Gfx.COLOR_LT_GRAY"
				text="@Strings.remainingTimeString"
				justification="Gfx.TEXT_JUSTIFY_RIGHT | Gfx.TEXT_JUSTIFY_VCENTER" />
		<drawable class="RemainingTime"/>
		<label id="finishLabel"
				x="dc.getWidth()/2 + dc.getWidth()*2/25"
				y="dc.getFontHeight(Gfx.FONT_LARGE) + dc.getFontHeight(Gfx.FONT_XTINY)/2"
				font="Gfx.FONT_XTINY"
				color="Gfx.COLOR_LT_GRAY"
				text="@Strings.finishString"
				justification="Gfx.TEXT_JUSTIFY_LEFT | Gfx.TEXT_JUSTIFY_VCENTER" />
		<drawable class="Finish"/>
	</layout>
</layouts>
